{% extends 'base.html.twig' %}


{% block body %}
    <div class="row mt-5">
        <div class="col-3">

        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-2 mr-5">
                    <img src="{{user.avatar}}">
                </div>
                <div class="col-5">
                    <p class="font-weight-bold">email: {{user.email}}</p>
                    <p class="font-weight-bold">date adh√©sion: {{user.joinDate | date}}</p>
                </div>
            </div>
        </div>
    </div>
    <div style="text-align: center;">
        <a id="envoi">
            <button data-to="{{user.email}}" id="envoi" class="btn btn-success">
                Envoyer un mail
            </button>
        </a>
    </div>
    
    <div id="mail">
        <form action="{{path('admin_mail')}}" method="POST">
            <label for="from">From</label>
            <input type="hidden" name="id" value="{{user.id}}">
            <input type="text" name="from">
            <label for="to">To</label>
            <input type="text" name="to" value="{{user.email}}">
            <label for="body">Message</label>
            <textarea name="body">

            </textarea>
            <button id="send" style="margin-top:5px;margin-left:45%;" class="btn btn-success ml_btn" type="submit">
                Envoyer
            </button>
        </form>
    </div>
    

{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function(){
            $("#envoi").on("click",function(){
                $('#mail').css('visibility','visible');
                $('#mail').dialog({
                    modal:true,
                    witdth:500,
                    height:500,
                });
            });
        });
    </script>
{% endblock %}
{% block stylesheets %} 
    <style>
        #mail {
            width:1000px;
            padding-left: 10%;
            padding-right: 10%;
            visibility: hidden;
        }
        #mail input{
            width:100%;
        }
        #mail textarea{
            width:100%;
            height:300px;
        }
    </style>

{% endblock %}