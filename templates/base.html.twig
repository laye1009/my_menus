    </head>
    <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
              <a href="{{path('app_home')}}" class="navbar-brand">Restau<br> JaayTaar</a>
              {% if not app.user %}
                <a class="nav-link active" aria-current="page" href="{{path('app_login')}}">Se connecter</a>
                <a class="nav-link active" aria-current="page" href="{{path('account_create')}}">Créer un compte</a>
              {% endif %}
               {% if app.user %}
                <a class="nav-link active" aria-current="page" href="{{path('app_logout')}}">Se déconnecter</a>
                <span>
                    <img style="width:30px;height:30px" class="rounded" src="{{app.user.avatar}}">
                </span>
              {% endif %}
              <p>
                {% include('items/panier.html.twig')%}
              </p>
              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
            </div>
          </nav>
        {% block header %}
        {% endblock %}
    </header>
    <body>
        {% for key,value in app.flashes %}
          <div class="{{'alert alert-' ~ key}}">
              {# {{message}} #}
              {{value[0]}}
          </div>
        {% endfor %}
        {% block body %}
            
        {% endblock %}
    </body>
